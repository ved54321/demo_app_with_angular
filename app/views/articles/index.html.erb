<div class="container-fluid" ng-app='myApp'>
<div ng-controller='articles_controller'>
<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>
 <input type='text' ng-model='search_text'>
      

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr ng-repeat ='article in articles | filter:search_text'> 
        <td> {{ article.title }}</td>
        <td> {{ article.publish_date }}</td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
<input type="text" ng-model="newArticle"/>
  
 <button class="btn btn-default" ng-click='addArticle()' type="submit">New Article</button>
</div>
</div>
